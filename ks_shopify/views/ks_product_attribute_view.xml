<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="ks_shopify_products_attribute_view_form" model="ir.ui.view">
        <field name="name">ks.shopify.product.attribute.view.form</field>
        <field name="model">product.attribute</field>
        <field name="inherit_id" ref="product.product_attribute_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/group[1]" position="before">
                <div class="oe_button_box" name="button_box">
                    <button name="action_shopify_layer_attributes" title="Shopify Attributes" type="object" class="oe_stat_button" icon="fa-server icon">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_text">Shopify</span>
                            <span class="o_stat_text">Attributes</span>
                        </div>
                    </button>
                </div>
            </xpath>
        </field>
    </record>

</odoo>